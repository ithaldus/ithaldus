FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install

# Copy source code (will be overridden by volume mount in dev)
COPY . .

# Expose main dev port
EXPOSE 3000

# Run both servers (Vite internally on 5173, Bun API on 3000)
CMD ["bun", "run", "dev"]
