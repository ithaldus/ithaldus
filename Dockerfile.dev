FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install

# Copy source code (will be overridden by volume mount in dev)
COPY . .

# Expose Vite dev server port (proxies /api to Bun on 3001)
EXPOSE 5173

# Run both servers (Vite on 5173, Bun API on 3001)
CMD ["bun", "run", "dev"]
