# Ports (change these to run multiple instances side by side)
PORT_WEB=3000
PORT_API=3001
# Docker project name (change to run multiple instances)
COMPOSE_PROJECT_NAME=ithaldus

# Database
DATABASE_URL=file:./data/ithaldus.db

# Auth bypass for development (set to true to skip MS365 login)
AUTH_BYPASS=true

# Microsoft OAuth (required when AUTH_BYPASS is false)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=change-me-in-production

# App URL (for OAuth callback) - should match PORT_WEB
APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# VPN Configuration (for production container)
# Supported protocols: openvpn, sstp, wireguard, none
VPN_PROTOCOL=none
VPN_USERNAME=
VPN_PASSWORD=
# SSTP server hostname (required when VPN_PROTOCOL=sstp)
SSTP_SERVER=
