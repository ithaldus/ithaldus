# Database
DATABASE_URL=file:./data/topograph.db

# Auth bypass for development (set to true to skip MS365 login)
AUTH_BYPASS=true

# Microsoft OAuth (required when AUTH_BYPASS is false)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=change-me-in-production

# App URL (for OAuth callback)
APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development
